<Window x:Class="Chatter.AvaloniaApp.Views.ErrorBoxWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="350" SizeToContent="Height" CanResize="False"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid RowDefinitions="Auto,Auto">
        <TextBlock Name="MessageTextBlock" Margin="8" TextWrapping="Wrap" />
        <Button Grid.Row="1" Name="CloseButton" HorizontalAlignment="Right" Margin="4" Width="80" IsDefault="True"
                IsCancel="True" Content="OK" />
    </Grid>
</Window>
