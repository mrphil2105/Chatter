<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Border.SystemMessage">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style Selector="Border.SystemMessage > TextBlock">
        <Setter Property="Margin" Value="8" />
        <Setter Property="Foreground" Value="#CCC" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="Border.UserMessage">
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style Selector="Border.UserMessage > TextBlock">
        <Setter Property="Margin" Value="12" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="Border.UserMessage.LocalMessage">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="24,6,12,6" />
        <Setter Property="Background" Value="#259" />
    </Style>

    <Style Selector="Border.UserMessage.RemoteMessage">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="12,6,24,6" />
        <Setter Property="Background" Value="#444" />
    </Style>
</Styles>
